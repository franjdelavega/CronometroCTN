<Window x:Class="CronometroCTN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CronometroCTN"
        mc:Ignorable="d"
        Title="..::CRONOMETRO CTN::.." Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="TxtTime" FontSize="30" Text="00:00:00" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="BtnStart" Content="Start" Width="80" Background="Green" Click="BtnStart_Click"></Button>
                <Button x:Name="BtnPause" Content="Pause" Width="80" Margin="5,0" Background="Yellow" Click="BtnPause_Click"></Button>
                <Button x:Name="BtnStop" Content="Stop" Width="80" Background="Red" Click="BtnStop_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
